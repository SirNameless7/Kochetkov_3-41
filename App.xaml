<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:KPO_Cursovoy"
             xmlns:converters="clr-namespace:KPO_Cursovoy.Converters"
             x:Class="KPO_Cursovoy.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryColor">#3B82F6</Color>
            <Color x:Key="SecondaryColor">#10B981</Color>
            <Color x:Key="DangerColor">#EF4444</Color>
            <Color x:Key="WarningColor">#F59E0B</Color>
            <Color x:Key="InfoColor">#9333EA</Color>
            <Color x:Key="LightBackgroundColor">#F8FAFC</Color>
            <Color x:Key="DarkBackgroundColor">#0F172A</Color>

            <Style TargetType="Button">
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="Padding" Value="15,10"/>
            </Style>

            <Style x:Key="PrimaryButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}"/>
                <Setter Property="TextColor" Value="White"/>
            </Style>

            <Style x:Key="SecondaryButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource SecondaryColor}"/>
                <Setter Property="TextColor" Value="White"/>
            </Style>

            <Style x:Key="DangerButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource DangerColor}"/>
                <Setter Property="TextColor" Value="White"/>
            </Style>

            <Style TargetType="Label">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="TextColor" Value="#334155"/>
            </Style>

            <Style x:Key="TitleLabel" TargetType="Label">
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="Black"/>
            </Style>

            <Style x:Key="SubtitleLabel" TargetType="Label">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="TextColor" Value="#64748B"/>
            </Style>

            <converters:OrderStatusToTextColorConverter x:Key="OrderStatusToColorConverter"/>
            <converters:OrderStatusToTextConverter x:Key="OrderStatusToTextConverter"/>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:StockToColorConverter x:Key="StockToColorConverter"/>
            <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>