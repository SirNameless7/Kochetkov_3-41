<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:KPO_Cursovoy.Views"
       x:Class="KPO_Cursovoy.AppShell"
       FlyoutBehavior="Disabled">
    <ShellItem Route="Auth"
               Shell.FlyoutItemIsVisible="False">
        <ShellContent Route="StartPage"
                      ContentTemplate="{DataTemplate views:StartPage}" />
        <ShellContent Route="LoginPage"
                      ContentTemplate="{DataTemplate views:LoginPage}" />
        <ShellContent Route="RegisterPage"
                      ContentTemplate="{DataTemplate views:RegisterPage}" />
    </ShellItem>

    <!-- Основное приложение: TabBar -->
    <TabBar Route="MainTabs">
        <ShellContent Title="Главная"
                      Icon="home.png"
                      Route="MainPage"
                      ContentTemplate="{DataTemplate views:MainPage}" />

        <ShellContent Title="Собрать ПК"
                      Icon="build.png"
                      Route="BuildPcPage"
                      ContentTemplate="{DataTemplate views:BuildPcPage}" />

        <ShellContent Title="Корзина"
                      Icon="cart.png"
                      Route="CartPage"
                      ContentTemplate="{DataTemplate views:CartPage}" />

        <ShellContent Title="Мои заказы"
                      Icon="orders.png"
                      Route="OrdersPage"
                      ContentTemplate="{DataTemplate views:OrdersPage}" />

        <ShellContent Title="Профиль"
                      Icon="profile.png"
                      Route="ProfilePage"
                      ContentTemplate="{DataTemplate views:ProfilePage}" />
    </TabBar>

</Shell>
