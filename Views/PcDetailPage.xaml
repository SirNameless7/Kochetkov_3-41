<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KPO_Cursovoy.Views.PcDetailPage"
             Title="{Binding Pc.Name}">

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="15">
            <Frame Padding="0" 
                   BorderColor="#E2E8F0" 
                   CornerRadius="12" 
                   HeightRequest="250">
                <Image Source="pc_detail.png" 
                       Aspect="AspectFill"/>
            </Frame>

            <Label Text="{Binding Pc.Name}" FontSize="28" FontAttributes="Bold"/>
            <Label Text="{Binding Pc.Description}" TextColor="#64748B" FontSize="16"/>

            <Label Text="Состав ПК:" FontSize="20" FontAttributes="Bold" Margin="0,10,0,5"/>

            <CollectionView ItemsSource="{Binding Pc.Components}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="20,*" Padding="0,5">
                            <Label Text="✓" TextColor="#10B981" FontSize="18" VerticalTextAlignment="Center"/>
                            <VerticalStackLayout Grid.Column="1">
                                <Label Text="{Binding Name}" FontSize="16" FontAttributes="Bold"/>
                                <Label Text="{Binding CategoryName}" TextColor="#64748B" FontSize="14"/>
                                <Label Text="{Binding Price, StringFormat='₽{0:F2}'}" TextColor="#10B981"/>
                            </VerticalStackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Grid ColumnDefinitions="*,Auto" Margin="0,20,0,0">
                <Label Text="{Binding Pc.Price, StringFormat='Итого: ₽{0:F2}'}" 
                       FontSize="24" 
                       FontAttributes="Bold" 
                       TextColor="#10B981"
                       VerticalOptions="Center"/>
                <Button Text="Добавить в корзину" 
                        Command="{Binding AddToCartCommand}"
                        BackgroundColor="#3B82F6" 
                        TextColor="White" 
                        CornerRadius="12" 
                        FontSize="16"
                        HeightRequest="50"
                        Grid.Column="1"
                        Margin="10,0,0,0"/>
            </Grid>

            <Frame BorderColor="#3B82F6" BackgroundColor="#BFDBFE" Padding="15" CornerRadius="12" Margin="0,10,0,0">
                <Label Text="💡 Вы можете добавить этот ПК в корзину или собрать свой собственный конфигурацию с помощью нашего конструктора!" 
                       TextColor="#1E3A8A" 
                       FontSize="14"/>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>