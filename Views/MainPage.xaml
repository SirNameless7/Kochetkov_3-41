<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:KPO_Cursovoy.ViewModels"
             x:Class="KPO_Cursovoy.Views.MainPage"
             Title="Каталог ПК">

    <Grid RowDefinitions="Auto,Auto,*">
        <VerticalStackLayout Grid.Row="0" Padding="15">
            <Label Text="Каталог готовых ПК" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   TextColor="Black"/>
            <Label Text="Выберите готовый ПК или соберите свой" 
                   FontSize="16" 
                   TextColor="#64748B"
                   Margin="0,5,0,0"/>
        </VerticalStackLayout>

        <HorizontalStackLayout Grid.Row="1" Padding="15" Spacing="10">
            <Button Text="Собрать ПК" 
                    Command="{Binding BuildPcCommand}"
                    BackgroundColor="#3B82F6" 
                    TextColor="White" 
                    CornerRadius="12"/>
            <Button Text="Корзина" 
                    Command="{Binding NavigateToCartCommand}"
                    BackgroundColor="#10B981" 
                    TextColor="White" 
                    CornerRadius="12"/>
        </HorizontalStackLayout>

        <RefreshView Grid.Row="2" 
                     Command="{Binding LoadPcsCommand}" 
                     IsRefreshing="{Binding IsBusy}">
            <CollectionView ItemsSource="{Binding PcItems}" 
                            SelectionMode="None"
                            Margin="15,0,15,15">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="15" 
                               Margin="0,10,0,0" 
                               BorderColor="#E2E8F0" 
                               CornerRadius="12"
                               HasShadow="True">
                            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto">
                                <Image Source="pc_thumbnail.png" 
                                       Grid.RowSpan="4"
                                       WidthRequest="100" 
                                       HeightRequest="100" 
                                       Aspect="AspectFit"/>

                                <Label Text="{Binding Name}" 
                                       FontSize="18" 
                                       FontAttributes="Bold" 
                                       Grid.Column="1"/>

                                <Label Text="{Binding Description}" 
                                       TextColor="#64748B" 
                                       Grid.Column="1" 
                                       Grid.Row="1"
                                       LineBreakMode="WordWrap"/>

                                <Label Text="{Binding Price, StringFormat='₽{0:F2}'}" 
                                       TextColor="#10B981" 
                                       FontAttributes="Bold" 
                                       FontSize="20" 
                                       Grid.Column="1" 
                                       Grid.Row="2"
                                       VerticalOptions="End"/>

                                <HorizontalStackLayout Grid.Column="1" Grid.Row="3" Spacing="5">
                                    <Button Text="Подробнее" 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainPageViewModel}}, Path=SelectPcCommand}" 
                                            CommandParameter="{Binding}"
                                            BackgroundColor="Transparent"
                                            TextColor="#3B82F6"
                                            FontAttributes="Bold"/>
                                    <Button Text="Купить" 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainPageViewModel}}, Path=AddToCartCommand}" 
                                            CommandParameter="{Binding}"
                                            BackgroundColor="#3B82F6"
                                            TextColor="White"
                                            CornerRadius="8"/>
                                </HorizontalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <VerticalStackLayout Spacing="10">
                        <Image Source="no_items.png" HeightRequest="100" HorizontalOptions="Center"/>
                        <Label Text="Готовые ПК отсутствуют" 
                               FontSize="18" 
                               HorizontalOptions="Center"
                               TextColor="#64748B"/>
                        <Label Text="Попробуйте собрать ПК самостоятельно" 
                               HorizontalOptions="Center"
                               TextColor="#64748B"/>
                        <Button Text="Собрать ПК" 
                                Command="{Binding BuildPcCommand}"
                                BackgroundColor="#3B82F6" 
                                TextColor="White" 
                                HorizontalOptions="Center"
                                WidthRequest="200"
                                CornerRadius="12"
                                Margin="0,10,0,0"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>