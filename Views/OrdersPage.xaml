<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:KPO_Cursovoy.ViewModels"
             x:Class="KPO_Cursovoy.Views.OrdersPage"
             Title="Мои заказы"
             BackgroundColor="#020617">

    <Grid RowDefinitions="Auto,Auto,*"
          BackgroundColor="#020617">

        <Grid RowDefinitions="Auto,Auto,*"
              BackgroundColor="#020617">

            <Grid Grid.Row="0"
                  ColumnDefinitions="Auto,Auto,Auto,Auto,Auto,*"
                  Padding="16"
                  BackgroundColor="#020617">

                <Button Text="Каталог"
                        Command="{Binding NavigateToCatalogCommand}"
                        BackgroundColor="#1F2933"
                        TextColor="#E5E7EB"
                        CornerRadius="10" />

                <Button Grid.Column="1"
                        Text="Собрать ПК"
                        Margin="8,0,0,0"
                        Command="{Binding NavigateToBuildPcCommand}"
                        BackgroundColor="#1F2933"
                        TextColor="#E5E7EB"
                        CornerRadius="10" />

                <Button Grid.Column="2"
                        Text="Корзина"
                        Margin="8,0,0,0"
                        Command="{Binding NavigateToCartCommand}"
                        BackgroundColor="#1F2933"
                        TextColor="#E5E7EB"
                        CornerRadius="10" />

                <Button Grid.Column="3"
                        Text="Заказы"
                        Margin="8,0,0,0"
                        Command="{Binding NavigateToOrdersCommand}"
                        BackgroundColor="#1F2933"
                        TextColor="#E5E7EB"
                        CornerRadius="10">
                    <Button.Triggers>
                        <DataTrigger TargetType="Button"
                                     Binding="{Binding CurrentSection}"
                                     Value="Orders">
                            <Setter Property="IsEnabled" Value="False" />
                            <Setter Property="BackgroundColor" Value="#2563EB" />
                            <Setter Property="TextColor" Value="White" />
                        </DataTrigger>
                    </Button.Triggers>
                </Button>

                <Button Grid.Column="4"
                        Text="Профиль"
                        Margin="8,0,0,0"
                        Command="{Binding NavigateToProfileCommand}"
                        BackgroundColor="#1F2933"
                        TextColor="#E5E7EB"
                        CornerRadius="10" />
            </Grid>
        </Grid>

        <Picker Grid.Row="1"
                ItemsSource="{Binding StatusFilterOptions}"
                SelectedItem="{Binding SelectedStatusFilter}"
                Title="Фильтр по статусу"
                Margin="15"
                BackgroundColor="White" />

        <RefreshView Grid.Row="2"
                     Command="{Binding LoadOrdersCommand}">
            <CollectionView ItemsSource="{Binding Orders}"
                            SelectionMode="Single">
                <CollectionView.EmptyView>
                    <VerticalStackLayout Spacing="20" Padding="30">
                        <Image Source="no_orders.png"
                               HeightRequest="150"
                               HorizontalOptions="Center" />
                        <Label Text="У вас пока нет заказов"
                               FontSize="24"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="#F9FAFB" />
                        <Label Text="Соберите свой первый ПК или выберите готовый из каталога"
                               TextColor="#64748B"
                               HorizontalOptions="Center"
                               FontSize="16" />
                        <Button Text="Перейти в каталог"
                                Command="{Binding NavigateToCatalogCommand}"
                                BackgroundColor="#3B82F6"
                                TextColor="White"
                                CornerRadius="12"
                                WidthRequest="200"
                                HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="15"
                               Margin="10"
                               BorderColor="#E2E8F0"
                               CornerRadius="12"
                               HasShadow="True"
                               BackgroundColor="#020617">
                            <Grid ColumnDefinitions="*"
                                  RowDefinitions="Auto,Auto,Auto,Auto,Auto">
                                <Label Text="{Binding Id, StringFormat='Заказ №{0}'}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       Grid.Row="0"
                                       TextColor="#F9FAFB" />

                                <Label Text="{Binding OrderDate, StringFormat='{0:d}'}"
                                       TextColor="#64748B"
                                       Grid.Row="1" />

                                <Label Text="{Binding Status, Converter={StaticResource OrderStatusToTextConverter}}"
                                       TextColor="{Binding Status, Converter={StaticResource OrderStatusToColorConverter}}"
                                       FontAttributes="Bold"
                                       Grid.Row="2" />

                                <Label Text="{Binding TotalAmount, StringFormat='Сумма: ₽{0:F2}'}"
                                       FontSize="16"
                                       TextColor="#10B981"
                                       FontAttributes="Bold"
                                       Grid.Row="3"
                                       Margin="0,5,0,0" />

                                <HorizontalStackLayout Grid.Row="4"
                                                       Spacing="10"
                                                       Margin="0,10,0,0">
                                    <Button Text="Подробнее"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:OrderViewModel}},
                                                              Path=ViewOrderDetailsCommand}"
                                            CommandParameter="{Binding}"
                                            BackgroundColor="Transparent"
                                            TextColor="#3B82F6"
                                            FontAttributes="Bold" />
                                    <Button Text="Оплатить"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:OrderViewModel}},
                                                              Path=PayOrderCommand}"
                                            CommandParameter="{Binding}"
                                            IsVisible="{Binding IsPaymentRequired}"
                                            BackgroundColor="#10B981"
                                            TextColor="White"
                                            CornerRadius="8" />
                                </HorizontalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>
