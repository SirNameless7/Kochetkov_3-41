<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:KPO_Cursovoy.ViewModels"
             x:Class="KPO_Cursovoy.Views.OrdersPage"
             Title="Мои заказы">

    <Grid RowDefinitions="Auto,*">
        <Picker Grid.Row="0" 
                ItemsSource="{Binding StatusFilterOptions}" 
                SelectedItem="{Binding SelectedStatusFilter}"
                Title="Фильтр по статусу"
                Margin="15"
                BackgroundColor="White"/>

        <RefreshView Grid.Row="1" Command="{Binding LoadOrdersCommand}" IsRefreshing="{Binding IsBusy}">
            <CollectionView ItemsSource="{Binding Orders}" SelectionMode="Single">
                <CollectionView.EmptyView>
                    <VerticalStackLayout Spacing="20" Padding="30">
                        <Image Source="no_orders.png" HeightRequest="150" HorizontalOptions="Center"/>
                        <Label Text="У вас пока нет заказов" 
                               FontSize="24" 
                               FontAttributes="Bold" 
                               HorizontalOptions="Center"/>
                        <Label Text="Соберите свой первый ПК или выберите готовый из каталога" 
                               TextColor="#64748B" 
                               HorizontalOptions="Center"
                               FontSize="16"/>
                        <Button Text="Перейти в каталог" 
                                Command="{Binding NavigateToCatalogCommand}"
                                BackgroundColor="#3B82F6" 
                                TextColor="White" 
                                CornerRadius="12" 
                                WidthRequest="200" 
                                HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="15" Margin="10" BorderColor="#E2E8F0" CornerRadius="12" HasShadow="True">
                            <Grid ColumnDefinitions="*" RowDefinitions="Auto,Auto,Auto,Auto,Auto">
                                <Label Text="{Binding Id, StringFormat='Заказ №{0}'}" 
                                       FontSize="18" 
                                       FontAttributes="Bold" 
                                       Grid.Row="0"/>

                                <Label Text="{Binding OrderDate, StringFormat='{0:d}'}" 
                                       TextColor="#64748B" 
                                       Grid.Row="1"/>

                                <Label Text="{Binding Status, Converter={StaticResource OrderStatusToTextConverter}}" 
                                       TextColor="{Binding Status, Converter={StaticResource OrderStatusToColorConverter}}" 
                                       FontAttributes="Bold" 
                                       Grid.Row="2"/>

                                <Label Text="{Binding TotalAmount, StringFormat='Сумма: ₽{0:F2}'}" 
                                       FontSize="16" 
                                       TextColor="#10B981" 
                                       FontAttributes="Bold" 
                                       Grid.Row="3"
                                       Margin="0,5,0,0"/>

                                <HorizontalStackLayout Grid.Row="4" Spacing="10" Margin="0,10,0,0">
                                    <Button Text="Подробнее" 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:OrderViewModel}}, Path=ViewOrderDetailsCommand}" 
                                            CommandParameter="{Binding}"
                                            BackgroundColor="Transparent"
                                            TextColor="#3B82F6"
                                            FontAttributes="Bold"/>
                                    <Button Text="Оплатить" 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:OrderViewModel}}, Path=PayOrderCommand}" 
                                            CommandParameter="{Binding}"
                                            IsVisible="{Binding IsPaymentRequired}"
                                            BackgroundColor="#10B981" 
                                            TextColor="White" 
                                            CornerRadius="8"/>
                                </HorizontalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>